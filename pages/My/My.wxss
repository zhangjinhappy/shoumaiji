/* pages/My/My.wxss */
Page {
  background-color: #111328;
}

.headView {
  width:100%; 
  height:400rpx;
  align-items: center;
  justify-content: center;
  background-color: pink;
  padding-top: 127rpx;
  background: url('https://hlxy.pluss.cn/resources/shj/images/My/mine_bg.jpg') no-repeat;
}
.logo{
  width: 100%;
  height: 260rpx;
  position: relative;
}
.headImage {
  width:140rpx; 
  height:140rpx;
  border-radius: 70rpx;
  position: absolute;
  left: 50%;
  bottom: 10rpx;
  transform: translate(-50%);
}
.headView .name{
  width: 100%;
  height: 100rpx;
  text-align: center;
}
.headImageView {
  background-color:white; 
  width:150rpx; 
  height:150rpx;
  border-radius: 75rpx;
}
.bodyView{
  width: 100%;
  height: 100%;
 
  margin-top: 20rpx;
}
.item{
  width: 100%;
  height:82rpx;
  line-height: 82rpx;
  border-bottom: 1px solid #111328;
  padding-left:32rpx;
  padding-right:32rpx;
}
.item view{
  float: left;
}
.text-white{
  color: #fff;
}

.itemText{
  padding-left: 10rpx;
  font-size: 26rpx;
  color: #EDEDED;
}
.itemImg{
  display: flex;
  align-items: center;
}

.footer{
  width: 100%;
  height: 300rpx;
  position: relative;
}
.son{
  width: 400rpx;
  height: 80rpx;
  border-radius:5px;
  background:linear-gradient(0deg,rgba(132,34,131,1) 0%,rgba(129,33,130,1) 100%);
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  color: #FFFFFF;
  font-family:Source Han Sans CN;
  font-weight:400;
  position: absolute;
  left: 50%;
  bottom: 100rpx;
  transform: translate(-50%);
}
.content-item{
  padding: 8rpx;
  height: 60rpx;
  margin-top: 8rpx;
  display: flex;
   border-bottom: 1px solid #111328;
  align-items: center;
   background-color: #1B1D36;
  justify-content: space-between;
}
.box{
  width: 28rpx;
  height: 28rpx;
}